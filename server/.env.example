# Portfolio Server Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME="Portfolio Server"
APP_VERSION="1.0.0"
PORT=5000
HOST=localhost
NODE_ENV=development

# Database Configuration
DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio
# Alternative MongoDB URI format
MONGODB_URI=mongodb://localhost:27017/portfolio

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# API Configuration
API_PREFIX=/api/v1
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
API_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# Scraper Configuration
SCRAPER_TIMEOUT=10000
SCRAPER_MAX_CONTENT=10485760
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_RETRY_DELAY=1000

# Platform Usernames (Update with your usernames)
LEETCODE_USERNAME=mythical-UV
CODEFORCES_USERNAME=yuvraj.mehta532
CODECHEF_USERNAME=quick_unity_53
GFG_USERNAME=yuvrajmevbrx

# Platform API URLs (Usually don't need to change)
LEETCODE_API=https://leetcode.com/graphql
CODEFORCES_API=https://codeforces.com/api
CODECHEF_BASE_URL=https://www.codechef.com
GFG_BASE_URL=https://www.geeksforgeeks.org

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_CRON="0 */6 * * *"
SCHEDULER_TIMEZONE=UTC
SCHEDULER_ON_STARTUP=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
# LOG_FILE=./logs/app.log
# LOG_MAX_SIZE=10m
# LOG_MAX_FILES=5

# Security Configuration
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRES_IN=24h

# Cache Configuration
CACHE_ENABLED=false
CACHE_TTL=300
CACHE_MAX_KEYS=1000
CACHE_CHECK_PERIOD=120

# Health Check Configuration
HEALTH_ENDPOINT=/health
HEALTH_DETAILED=true

# Development/Production Specific
# Uncomment for production
# NODE_ENV=production
# LOG_LEVEL=warn
# CACHE_ENABLED=true

# Uncomment for testing
# NODE_ENV=test
# LOG_LEVEL=error
# SCHEDULER_ENABLED=false
